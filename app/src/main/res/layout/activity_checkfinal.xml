<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mercy.mercyshop.CheckfinalActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/thx"
        android:text="Terimakasih Sudah Berbelanja Di Mercy Shop"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="45dp"
        android:textAlignment="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/pesanan"
            android:text="Pesanan Anda :"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/thx"
            android:layout_width="130dp"
            android:layout_height="wrap_content" />
    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/pesanan"
        android:id="@+id/recheck"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="5dp">


    </android.support.v7.widget.RecyclerView>
        <TextView
            android:id="@+id/diri"
            android:text="Pengiriman Barang Ke :"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/pesanan"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/nm1"
            android:text="Nama :"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginLeft="94dp"
            android:layout_below="@+id/diri"
            android:layout_width="60dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/vnm"
            android:text="Cintia Hapsari"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/nm1"
            android:textSize="16dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/diri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/no1"
            android:text="No :"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginLeft="118dp"
            android:layout_below="@+id/nm1"
            android:layout_width="36dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/vno"
            android:text="08266432754"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/no1"
            android:textSize="16dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/vnm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/alm1"
            android:text="Alamat :"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginLeft="84dp"
            android:layout_below="@+id/no1"
            android:layout_width="70dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/valm"
            android:text="Jl. Kalasan Indah Permai RT 007 / RW002, Bandung, Jawa Barat"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/alm1"
            android:textSize="16dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/vno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/js1"
            android:text="JNE -"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="105dp"
            android:layout_below="@+id/alm1"
            android:layout_width="50dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/vjs"
            android:text="YES"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/js1"
            android:layout_marginTop="7dp"
            android:textSize="16dp"
            android:layout_below="@+id/valm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/ttl"
            android:text="Total Belanja :"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginLeft="38dp"
            android:layout_below="@+id/js1"
            android:layout_width="117dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/vttl"
            android:text="Rp. 200.000"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/ttl"
            android:textSize="16dp"
            android:layout_below="@+id/vjs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/info"
            android:text="Pesanan anda akan di proses setelah anda melakukan pembayaran ke Rekening Mercy Shop berikut ini :"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:layout_below="@+id/ttl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/rek1"
            android:text="Bank BCA : 4562-6674-1827"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_below="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/rek2"
            android:text="Bank BNI : 1123-8492-9429"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_below="@+id/rek1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/blnj"
            android:layout_width="300dp"
            android:text="Belanja Lagi"
            android:textStyle="bold"
            android:textColor="@color/colorText"
            android:layout_marginLeft="45dp"
            android:background="@color/colorPrimary1"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/rek2"/>
    </RelativeLayout>
</LinearLayout>
