<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/carstas"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="5dp"
    android:backgroundTint="@color/cardview_shadow_end_color"
    android:backgroundTintMode="src_in"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:background="@color/colorText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingLeft="10dp"
            android:text="Transaksi Pesanan"
            android:textSize="17sp"
            android:textStyle="bold"
            android:id="@+id/product" />

        <TextView
            android:id="@+id/ktr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product"
            android:layout_marginLeft="10dp"
            android:text="TP-"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/ktr2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ktr"
            android:layout_below="@id/product"
            android:layout_marginLeft="5dp"
            android:text="0"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/nm1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ktr"
            android:layout_marginLeft="10dp"
            android:text="Christy Bella"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/angka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nm1"
            android:layout_marginLeft="10dp"
            android:text="50.000"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/sts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/angka"
            android:layout_marginLeft="10dp"
            android:text="Status"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/sts1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/angka"
            android:layout_toRightOf="@id/sts"
            android:layout_marginLeft="10dp"
            android:text="Terkirim"
            android:textSize="15sp"
            android:textStyle="bold" />
    </RelativeLayout>
</android.support.v7.widget.CardView>