<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorText">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data Refund Barang"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="15dp"/>
        <TextView
            android:layout_below="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="85dp"
            android:text="Nama :"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="60dp"
            android:id="@+id/nm"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="190dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/nm"
            android:layout_below="@+id/text"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/ipnm"
                android:inputType="text"
                android:singleLine="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                />
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:layout_below="@+id/nm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="65dp"
            android:text="No. Telp :"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:id="@+id/no"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="190dp"
            android:layout_marginTop="66dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/nm"
            android:layout_below="@+id/text"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/ipno"
                android:inputType="text"
                android:singleLine="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                />
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:layout_below="@+id/no"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="76dp"
            android:text="Alamat :"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:id="@+id/alm"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="190dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/nm"
            android:layout_below="@+id/text"
            android:id="@+id/plm"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/ipalm"
                android:inputType="text"
                android:singleLine="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                />
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:layout_below="@+id/alm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="32dp"
            android:text="Kode Barang :"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:id="@+id/kd1"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="190dp"
            android:layout_marginTop="135dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/kd1"
            android:layout_below="@+id/text"
            android:id="@+id/kd"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/ikd1"
                android:inputType="text"
                android:singleLine="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                />
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:layout_below="@+id/kd1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="35dp"
            android:text="Alasan Pengembalian :"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:id="@+id/alsnq"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="300dp"
            android:layout_marginLeft="35dp"
            android:layout_below="@+id/alsnq"
            android:id="@+id/alsn"
            android:layout_height="50dp">
            <EditText
                android:id="@+id/ials"
                android:inputType="text"
                android:singleLine="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                />
        </android.support.design.widget.TextInputLayout>
        <CheckBox
            android:id="@+id/che"
            android:layout_below="@id/alsn"
            android:layout_width="300dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:text="Dengan Mengeklik ini Anda Tunduk Pada Syarat dan Peraturan Kami"/>
    <ProgressBar
        android:layout_below="@+id/alsnq"
        android:id="@+id/loading1"
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btnrfn"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/alsn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@color/colorPrimaryDark"
        android:paddingTop="10dp"
        android:text="Progress"
        android:textColor="@color/colorText" />
    </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>